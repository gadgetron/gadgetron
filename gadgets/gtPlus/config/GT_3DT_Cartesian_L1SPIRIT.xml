            <value>true</value>
        </property>

        <!-- Separate mode -->
        <property>
            <name>separate_averageall_ref</name>
            <value>true</value>
        </property>
        <property>
            <name>separate_fullres_coilmap</name>
            <value>true</value>
        </property>
        <property>
            <name>separate_same_combinationcoeff_allN</name>
